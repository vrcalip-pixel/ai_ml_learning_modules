            <!-- Navigation -->
            <div class="nav-buttons">
                <button id="prevBtn" onclick="changeSection(-1)">‚Üê Previous</button>
                <button id="nextBtn" onclick="changeSection(1)">Next ‚Üí</button>
            </div>
        </div>
