    <script>
        let currentSection = 1;
        const totalSections = 7;
        
        function updateProgress() {
            const progress = (currentSection / totalSections) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }
        
        function showSection(n) {
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));
            
            if (n > totalSections) { currentSection = totalSections; }
            if (n < 1) { currentSection = 1; }
            
            sections[currentSection - 1].classList.add('active');
            
            document.getElementById('prevBtn').disabled = currentSection === 1;
            document.getElementById('nextBtn').textContent = currentSection === totalSections ? 'Finish ‚úì' : 'Next ‚Üí';
            
            updateProgress();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        function changeSection(n) {
            currentSection += n;
            showSection(currentSection);
        }
        
        function selectDemo(element, demoNum) {
            // Remove previous selections
            document.querySelectorAll('.demo-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Hide previous results
            document.querySelectorAll('.demo-result').forEach(result => {
                result.classList.remove('show');
            });
            
            // Show selected and result
            element.classList.add('selected');
            document.getElementById('demoResult' + demoNum).classList.add('show');
        }
        
        function checkAnswer(element, isCorrect, questionNum) {
            const options = element.parentElement.querySelectorAll('.quiz-option');
            const feedback = document.getElementById('feedback' + questionNum);
            
            // Disable all options
            options.forEach(opt => {
                opt.style.pointerEvents = 'none';
            });
            
            if (isCorrect) {
                element.classList.add('correct');
                feedback.classList.add('show', 'correct');
                feedback.textContent = '‚úì Correct! Excellent work!';
            } else {
                element.classList.add('incorrect');
                // Highlight correct answer
                options.forEach(opt => {
                    if (opt.onclick.toString().includes('true')) {
                        opt.classList.add('correct');
                    }
                });
                feedback.classList.add('show', 'incorrect');
                feedback.textContent = '‚úó Not quite. The correct answer is highlighted in green. Review the material and try again!';
            }
        }
        
        // Initialize
        showSection(currentSection);
    </script>
</body>
