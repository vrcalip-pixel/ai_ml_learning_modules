                        <div class="quiz-options">
                            <div class="quiz-option" onclick="checkAnswer(this, false, 3)">Supervised Learning</div>
                            <div class="quiz-option" onclick="checkAnswer(this, true, 3)">Unsupervised Learning</div>
                            <div class="quiz-option" onclick="checkAnswer(this, false, 3)">Reinforcement Learning</div>
                        </div>
